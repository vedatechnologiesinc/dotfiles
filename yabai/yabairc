# -*- mode: sh -*-
#!/usr/bin/env bash

yabai -m config \
    external_bar                 off:40:0 \
    menubar_opacity              1.0 \
    mouse_follows_focus          on \
    focus_follows_mouse          off \
    display_arrangement_order    default \
    window_origin_display        default \
    window_placement             first_child \
    window_insertion_point       focused \
    window_zoom_persist          on \
    window_shadow                float \
    window_animation_duration    0.0 \
    window_animation_easing      ease_out_circ \
    window_opacity_duration      0.0 \
    active_window_opacity        1.0 \
    normal_window_opacity        0.60 \
    window_opacity               off \
    insert_feedback_color        0xffd75f5f \
    split_ratio                  0.50 \
    split_type                   auto \
    auto_balance                 off \
    top_padding                  10 \
    bottom_padding               10 \
    left_padding                 10 \
    right_padding                10 \
    window_gap                   10 \
    layout                       bsp \
    mouse_modifier               alt \
    mouse_action1                move \
    mouse_action2                resize \
    mouse_drop_action            swap

yabai -m rule --add app="System Settings" manage=off
yabai -m rule --add app="Finder" manage=off
yabai -m rule --add app="Calculator" manage=off
yabai -m rule --add app="Messenger" manage=off
yabai -m rule --add app="Discord" manage=off
yabai -m rule --add app="Alfred Preferences" manage=off
yabai -m rule --add app="Rakuten Viber" manage=off
yabai -m rule --add app="Steam" manage=off
yabai -m rule --add app="Strongbox" manage=off
yabai -m rule --add app="Transmission" manage=off
yabai -m rule --add app="mpv" manage=off
yabai -m rule --add app="eqMac" manage=off
yabai -m rule --add app="Preview" manage=off
yabai -m rule --add app="LibreOffice" manage=off
yabai -m rule --add app="Logi Options+" manage=off
